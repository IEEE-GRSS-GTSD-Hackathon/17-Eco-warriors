	const svg = {
	upi: '<svg class="w-4 h-4 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg>',
	dni: '<svg class="w-4 h-4 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path></svg>',
	};
	
	var faqEvents = function() {
	var faqs = document.getElementsByClassName("faqhead");
	for(var i=0;i<faqs.length;i++)
	{
	faqs[i].children[1].innerHTML = svg.dni;
	faqs[i].addEventListener("click", function(e){
	var tag = e.target.tagName.toLowerCase();
	var btn = tag == "button" ? e.target : e.target.closest("button");
	var p = btn.nextElementSibling;
	btn.children[1].innerHTML = p.classList.contains('hidden') ? svg.upi:svg.dni;
	p.classList.toggle("hidden");
	});
	}
	};
	document.addEventListener("DOMContentLoaded", function() { faqEvents(); });
	</script> 
